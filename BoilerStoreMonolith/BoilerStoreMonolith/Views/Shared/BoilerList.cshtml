@model BoilerStoreMonolith.Models.ProductListViewModel
@{
    ViewBag.Title = "BoilerList";
    string actionName = this.ViewContext.RouteData.Values["action"].ToString();
    if (actionName == "BoilerList")
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
    else
    {
        Layout = null;
    }
}



<div class="justify-content-center align-items-center flex-column w-100">

    @if (actionName == "BoilerList")
    {
        <h4 class="text-center">Продукция компании @ViewBag.Firm </h4>
        <br />
        <br />
    }

    <table class="table table-borderless ">

        @{
            var productList = Model.Products.ToList();
            var index = 0;
        }

        @for (int i = 0; i < Model.PagingInfo.ItemsPerPage && i < productList.Count; i++)
        {
            <tr>
                @for (int j = 0; j < 3; j++)
                {
                    if (index >= productList.Count) { break; }

                    <td>@Html.Partial("Card", productList[index])</td>
                    index++;
                }
            </tr>
        }
    </table>

    @Html.Partial("Pagination", Model.PagingInfo)

</div>


