


<button type="button" class="btn btn-light" data-toggle="modal" data-target="#exampleModal">
    добавить новую категорию
</button>


<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content text-dark">
            <div class="modal-header align-self-center">
                <h5 class="modal-title" id="exampleModalLabel">Новая категория товара</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group row">
                    <label for="inputName" class="col-sm-4 col-form-label text-center">Название категории</label>
                    <div class="col-sm-8 align-self-center">
                        <input type="text" name="Name" class="form-control" id="inputName" placeholder="Введите название категории" required="">
                    </div>
                </div>

                @Html.Partial("UploadImg")

                <div class="form-group row ">
                    <p class="text-center m-auto">Характеристики</p>
                    <button id="addSpecBtn" type="button" class="btn btn-default m-auto">Добавить характеристику</button>
                </div>
                <div class="form-group row m-auto">
                    <label for="inputName" class="col-sm-4 col-form-label text-center">Мощность</label>
                    <div class="col-sm-8 align-self-center">
                        <input type="text" name="Name" class="form-control" id="inputName" placeholder="Введите мощность" required="">
                    </div>
                </div>

            </div>
            <div class="modal-footer d-flex justify-content-center">
                <input type="submit" value="Отправить" class="btn btn-info">
            </div>
        </div>
    </div>
</div>