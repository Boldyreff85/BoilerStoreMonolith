@model BoilerStoreMonolith.Domain.Entities.Firm
<li class="list-group-item d-flex">
    <div class="col-6 mx-auto my-3 align-self-center">
        <div class="inputFirmVal" name="firmsCheckboxes">@Model.Name</div>
    </div>

    <div class="col-3 mx-auto my-3 align-self-center">
        <img class="img-thumbnail" width="80" height="80"
             src="@Url.Action("GetImageFromFirmTable", "Admin",
                      new {firmName = @Model.Name})" />
    </div>

    <div class="col-3 mx-auto my-3 text-center">
        <button type="button" aria-label="Close"
                class="firmRemove btn btn-default m-auto">
            Х
        </button>

        <input type="hidden" name="firmsCheckboxes" value=@Model.Name />
    </div>
</li>