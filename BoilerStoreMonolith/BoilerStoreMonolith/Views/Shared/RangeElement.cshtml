@model BoilerStoreMonolith.Models.CatalogueViewModel


<div class="rangeBlock">



    @foreach (var item in Model.FeatureRanges)
    {
        <label class="featureLabel">@item.FeatureName</label>
        <div class="row">
            <div class="col-5 mx-1 px-0">
                <label class="rangeLabel">от</label>
                <input class="rangeInput" type="text" name="From" placeholder=@item.From>
            </div>
            <div class="col-5 mx-1 px-0">
                <label class="rangeLabel">до</label>
                <input class="rangeInput" type="text" name="To" placeholder=@item.To>
            </div>
        </div>
    }

    <button type="button" class="btn btn-light">
        Показать
    </button>

