@model List<BoilerStoreMonolith.Domain.Entities.Category>


<div class="site-section">
    <h2 class="text-center mb-5">
        Оборудование
    </h2>

    <div class="row d-flex category-list">


        @for (int i = 0; i < Model.Count();)
        {
            if (i >= Model.Count()) { break; }

            <div class="info-card card shadow-sm" style="width: 14rem;">
                <a href=@Url.Action("FirmList", 
                            "Home", 
                            new { category = Model[i].Name })>
                    <img src="@Url.Action("GetImageFromCategoryTable", "Admin",
                                  new {categoryId = Model[i].Id})"
                    class="card-img-top"
                    alt="Настенные" />
                    <div class="card-body">
                        <h5 class="card-title text-center">@Model[i].Name</h5>
                    </div>
                </a>
            </div>
            i++;

        }

    </div>
</div>




