@model BoilerStoreMonolith.Models.ProductWithFeatures

@{
    var imgSource = Url.Action("GetImage", "Home", new { productId = Model.Product.ProductID });
}


<div class="product-card">
    <a href=@Url.Action("ProductPage", "Home", new { productId = Model.Product.ProductID}) class="boiler_title">

        <div class="image-wrapper">
            <img src=@imgSource />
        </div>

        <div class="product-title">
            @Model.Product.Title
        </div>

        <div class="product-price">@Model.Product.Price @Model.Product.Currency</div>
        @foreach (var item in Model.ProductFeatures)
        {
            <div class="boiler-price mx-auto">@item.Name - @item.Value  @item.Unit</div>
        }
    </a>
</div>