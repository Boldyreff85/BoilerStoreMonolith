@{
    var features = new List<string>
{
"one", "two", "three"
};
}


<div class="col-3 m-auto"> Выберите характеристику из списка:   </div>

<div class="col-3 m-auto text-center">
    @if (features?.Any() == true)
    {
        <div class="dropdown">
            <button class="btn btn-transparent dropdown-toggle" type="button"
                    id="dropdownMenuButton" data-toggle="dropdown"
                    aria-haspopup="true" aria-expanded="false">
                @features[0]
            </button>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                @foreach (var item in features)
                {

                    @Html.ActionLink(item,
                        "", "",
                        new
                        {

                        },
                        new{@class= "dropdown-item" })
                }
            </div>
        </div>
    }
    else
    {
        <div class="dropdown">
            <button class="btn btn-transparent dropdown-toggle" type="button"
                    id="dropdownMenuButton" data-toggle="dropdown"
                    aria-haspopup="true" aria-expanded="false">
                Нет доступных категорий.
            </button>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
            </div>
        </div>
    }

</div>

<div class="col-3 m-auto pl-5">
    @Html.ActionLink("Редактировать",
        "EditFeatures",
        "Admin",
        null,
        new{@class= "btn btn-secondary" })
</div>

<div class="col-3 m-auto pl-5">
    <button id="addSpecBtn" type="button" class="btn btn-default m-auto">Добавить</button>
</div>


