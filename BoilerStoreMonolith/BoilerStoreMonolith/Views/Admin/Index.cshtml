@model List<BoilerStoreMonolith.Domain.Entities.Product>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<style>
    .productList {
        overflow-y: auto;
        overflow-x: hidden;
        height: 70vh;
    }
</style>


<div class="panel panel-default">
    @using (Html.BeginForm("DeleteSelected", "Admin",
        FormMethod.Post, new { enctype = "multipart/form-data" }))
    {

        <div class="panel-heading">
            <h3>Все товары</h3>
        </div>

        <div class="productList panel-body">

            <table class="table table-striped table-condensed table-bordered">
                <tr>
                    <th class="text-right">ID</th>
                    <th>Наименование</th>
                    <th>Картинка</th>
                    <th class="text-center">Выбрать товар</th>
                </tr>

                @for (int i = 0; i < Model.Count; i++)
                {
                    <tr>
                        <td class="text-right">@Model[i].ProductID</td>

                        <td>
                            @Html.ActionLink(Model[i].Title, "Edit",
                                new { Model[i].ProductID})
                        </td>

                        <td class="text-right">
                            <img class="img-thumbnail" width="80" height="80"
                                 src="@Url.Action("GetImage", "Home",
                                          new {Model[i].ProductID})" />
                        </td>
                        <td class="text-center">
                            @Html.CheckBox("productIds", new{value=@Model[i].ProductID})
                        </td>
                    </tr>
                }
            </table>


        </div>



        <div class="panel-footer">
            @Html.ActionLink("Добавить новый товар", "Create", null,
                new {@class = "btn btn-secondary"})

            @Html.ActionLink("Редактировать информацию сайта", "EditSiteInfo", null,
                new {@class = "btn btn-secondary ml-4"})

            <input type="submit"
                   class="btn btn-secondary ml-4"
                   value="Удалить выбранные товары" />



        </div>

    }

</div>

