@model BoilerStoreMonolith.Models.IndexFeaturesViewModel
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

    var catFeatures = new List<string>
{
"Мощность", "Объём", "Масса"
};
}

<div class="panel">

    @using (Html.BeginForm("EditFeatures", "Admin", FormMethod.Post,
    new { enctype = "multipart/form-data" }))
    {

        <div class="panel-heading">

            <h3 class="text-center py-2">Редактирование общего списка характеристик</h3>

            <div class="form-group row  ml-5 my-5">

                @Html.TextBoxFor(m=>m.NewFeatureName,
                    new
                    {
                        @class = "form-control col-8",
                        placeholder = "Введите название характеристики",
                        required=""
                    })

                <div class="col-4">
                    <input type="submit" value="Добавить" class="btn btn-default m-auto">
                </div>
            </div>

        </div>

        <div class="otherLists panel-body">

            <div class="form-group row mx-5">
                <div class="col align-self-center">
                    <ul id="specsList" class="list-group list-group-flush">
   


                        @foreach (var item in Model.Features)
                        {
                            <li class="list-group-item d-flex">
                                <div class="inputSpecVal">
                                    @item.Name
                                </div>

                                @Html.ActionLink("X",
                                    "DeleteFeature", "Admin",
                                    new{ featureId = item.Id},
                                    new{ @class="ml-auto" })
                            </li>
                        }
                    </ul>
                </div>
            </div>

        </div>




        <br />

        <div class="panel-footer">

            @Html.ActionLink("Отменить и вернуться к списку",
                "Index", null, new
                {
                    @class = "btn btn-default m-1 smallBtn"
                })
        </div>

        <br />

    }

</div>

